<div id="main"> 
 <div id="sidebar">
    <ul class="orderdetails">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content"> 
  <%= render 'layouts/search' %>
  <div style="cursor:pointer;width:auto;border-bottom:#d6d6d6 1px dotted;"> 
    <h3>YOUR CART</h3>    
    <% if !session[:cart].nil? && !session[:cart].blank? %>    
      </div>
        <div style="padding-top:2px">
        <br>
        <table style="padding-top:1px; "> 
        <tbody>
          <%= render partial: "orderdetail", collection: @orderdetails %>
        </tbody>
        </table>
      <div style="width:auto;border-bottom:#d6d6d6 1px solid;"> &nbsp;</div>      
      <br>
      <div style="padding-left:300px;padding-right:300px">
        <center>
        <%= form_for(:orderdetail, :url => deleteallcart_path) do |f| %>     
           <%= f.submit "Clear your cart", class: 'btn btn-primary btn_orderdetails' %> <br/>
        <% end %>
        <br/>
           <%= button_to "Continue", root_path, :class => "btn btn-primary btn_orderdetails" ,:method => :get  %><br/>    
           <%= button_to "Purchase", new_order_path, :class => "btn btn-primary btn_orderdetails" ,:method => :get  %><br />       
       </center></div>
    
    <% else %>
      Your cart is empty. <%= link_to "Buy now", root_path , method: :get%>
    <% end %>
  </div>
</div> 
</div>


