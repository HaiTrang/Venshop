
<div id="main"> 
 <div id="sidebar">
    <ul class="orderdetails">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(cat_id: cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content"> 
    <h1>Thông tin đặt hàng</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_for(:order, url: orders_path) do |f| %>     
     
      <%= f.label "Họ tên " %>
      <% if logged_in? %>
        <%= f.text_field :username,  value: @user.name, class: 'form-control' %>
      <% else %>
        <%= f.text_field :username, class: 'form-control' %>
      <% end %>      

      <%= f.label "Nhập địa chỉ email của bạn * " %>
      <% if logged_in? %>
        <%= f.text_field :email, value: @user.email, class: 'form-control' %>
      <% else %>
        <%= f.text_field :email, class: 'form-control' %>
      <% end %>      

      <%= f.label "Số điện thoại" %>
      <%= f.text_field :phonenumber, class: 'form-control' %>
      
      <%= f.label "Địa chỉ nhận hàng" %>
      <%= f.text_field :ShippingAddress, class: 'form-control' %>      
      
      <%= f.hidden_field :User_id, value: session[:user_id] %>

      <%= f.submit "Xong", class: 'btn btn-primary' %>
      <% end %>
  </div>    
 </div>
  </div> 
</div>
