
<div id="main"> 
 <div id="sidebar">
    <ul class="orderdetails">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(cat_id: cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content"> 
  <%= render 'layouts/search' %>
    <h1>Thông tin đặt hàng</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:order, url: orders_path) do |f| %>
      <%= f.label "Name" %>
      <% if logged_in? %>
        <%= f.text_field :username,  value: @user.name, class: 'form-control' %>
      <% else %>
        <%= f.text_field :username, class: 'form-control' %>
      <% end %>      

      <%= f.label "Email * " %>
      <% if logged_in? %>
        <%= f.text_field :email, value: @user.email, class: 'form-control' %>
      <% else %>
        <%= f.text_field :email, class: 'form-control' %>
      <% end %>      

      <%= f.label "Phone number" %>
      <%= f.text_field :phonenumber, class: 'form-control' %>
      
      <%= f.label "Shipping address" %>
      <%= f.text_field :ShippingAddress, class: 'form-control' %>      
      
      <%= f.hidden_field :User_id, value: session[:user_id] %>

      <%= f.submit "Finish", class: 'btn btn-primary' %>
    <% end %>
    <%= render 'shared/error_messages' %>
  </div>    
 </div>
  </div> 
</div>
