
<div id="main"> 
 <div id="sidebar">
    <ul class="categories">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content"> 
    <%= render 'layouts/search' %>
    <h1>Edit product</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@product) do |f| %>
          <%#= render 'shared/error_messages' %>
          
          <%= render 'fields', f: f %>

          <%= f.submit "Save", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    </div>
  </div> 
</div>



