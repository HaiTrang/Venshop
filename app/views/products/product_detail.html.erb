<div id="main"> 
 <div id="sidebar">
    <ul class="categories">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content">
    <div class="cont_wrap">    
      <ul class="products">
         <div class="img_div" height = "100%" >
           <%= image_tag(@product.urlLargeImage)%>
         </div>
         <div class="info_div">
           <p ><%= @product.name %></p>
           <p class="product_price"><%= @product.price %></p>
           <p><b>Information</p></b>
           <p><%= @product.description %></p>
           <%
              @url = orderdetails_path
              session[:product_id] = @product.id              
           %>
           <%= form_for(:product, url: productdetail_path(id: @product.id),method: "post") do |f| %>
            
            <%= f.submit "Buy", class: 'btn btn-primary' %> 
          <% end %>

          

           
         </div>
      </ul>
    </div>
  </div> 
</div>