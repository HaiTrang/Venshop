

<div id="main"> 
 <div id="sidebar">
    <ul class="categories">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content"> 
    <h1>New Product</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= form_for(:product, url: products_path) do |f| %>
	      <%= render 'fields', f: f %>
	      <%= f.submit "Create my product", class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>

  </div> 
</div>