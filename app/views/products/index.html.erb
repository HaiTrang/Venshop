<% provide(:title, 'All Products') %>
<%= render 'layouts/header' %>

<div id="main">
 <div id="sidebar">
    <ul class="categories">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  
    <% if @products.number_found > 0 %>
    <div id="content">
        <div class="cont_wrap">
        <%= will_paginate @products.result_query %>
        <ul class="products">        
        <% @products.result_query.each do |product| %>
  	      <div class="cont_box">
    	       <%= link_to image_tag(product["urlImage"]), productdetail_path(product_id: product["id"] ) %>
    		     <p><%= link_to product["name"].truncate(18) , productdetail_path(product_id: product["id"] ) %></p>
             <p><%= product["price"] %></p>         
  	      </div>
        <% end %>
        </ul>  
    </div>    
    <% else %>
      <h2>Hiện tại chưa có sản phẩm nào</h2>
    <% end %>
  </div> 
</div>