
<div id="main"> 
 <div id="sidebar">
 
    <ul class="products">
      <% @categories.each do |cat| %>
      <p>
        <%= link_to cat.name, products_path(:cat_id => cat.id) %>
      </p>  
      <% end %>
    </ul>
  </div>
  <div id="content">
    <div class="cont_wrap">
      <%#= will_paginate %>
      <ul class="products">
        <% if @myproducts.size > 0 %>
           <% @myproducts.each do |item| %>
      	      <div class="cont_box">
      	        <%= link_to image_tag(item.urlImage), productdetail_path(:product_id => item.id) %>
          		    <p><%= link_to item.name , productdetail_path(:product_id => item.id) %></p>
          		    <p><%= item.price %></p>		    
                   <%= link_to "edit" , edit_product_path(id: item.id) %>
                   <%= link_to "delete", product_path(id: item.id), method: :delete,
                                                data: { confirm: "You sure?" } %>
      	       </div>
           <%end%> 
        <% else %>
          <h2>Hiện tại chưa có sản phẩm nào</h2>
        <% end %>       
      </ul>
    </div>
  </div> 
</div>