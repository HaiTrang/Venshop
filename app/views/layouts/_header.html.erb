<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Venshop", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        <li><%= link_to "Cart", orderdetails_path %></li>
       
        <% if logged_in? %>
        
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= session[:user_name]%> <b class="caret"></b>              
            </a>            
            
            <ul class="dropdown-menu">              
              <li><%= link_to "Update profile", edit_user_path(id: session[:user_id])%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "My products", my_products_path %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "New product", new_product_path %>
              </li>
              <li class="divider"></li>
               <% if current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
          <% end %>
            </ul>
          </li>
          <li>
               <%= link_to "Sign out", logout_path, method: "delete" %>
            </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Register", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>  
</header>
